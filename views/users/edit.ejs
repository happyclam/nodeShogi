<div class="data-form">
  <form class="form-signin" method="POST" action="<%=`/users/${user._id}/update?_method=PUT`%>">
    <h2 class="form-signin-heading">Edit user:</h2>
    <label for="inputName">Name</label>
    <input type="text" name="name" id="inputName" class="form-control" value="<%= user.name %>" placeholder="Name" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" value="<%= user.password %>" placeholder="Password" required>
    <label for="inputEmail">Email address</label>
    <input type="email" name="email" id="inputEmail" class="form-control" value="<%= user.email %>" placeholder="Email address">
    <label for="loginStatus">Status</label>
    <input type="number" name="loginStatus" id="inputStatus" class="form-control" value="<%= user.loginStatus %>" placeholder="Status">
    <label for="socketId">socketId</label>
    <input type="text" name="socketId" id="inputsocketId" class="form-control" value="<%= user.socketId %>" placeholder="socketId">
    <button class="btn btn-lg btn-primary btn-block" type="submit">Save</button>
  </form>
</div>
